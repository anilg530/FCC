
<!DOCTYPE HTML>
<html>
<head>

    <link href="stylesheets/bootstrap.css" rel="stylesheet">
    <link href="stylesheets/custom4.css" rel="stylesheet">
    <script src="js/jquery.min.js"></script>
    <script src="js/main.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"> </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


</head>

<body>
<%- include partials/navsignup.ejs%>

<!-- MultiStep Form -->
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form id="msform" action="/save_schedule" method = "post"  encType="multipart/form-data">
            <!-- progressbar -->


            <table class="table " id="makeEditable">
                <thead>
                <tr>
                    <th> Course Name</th>
                    <th> Course Number</th>
                    <th> Course Section</th>
                    <th>Days</th>
                    <th>Start Time</th>
                    <th>End Times</th>


                </tr>
                </thead>
                <tbody>

                <% for (var i = 0; i < courses.length;i++) { %>
                <tr>
                    <td> <input type = "text" name = "name<%= i %>" value= <%= courses[i].name %>  /> </td>
                    <td> <input type = "text" name = "number<%= i %>" value= <%= courses[i].number %>  /> </td>
                    <td><input type = "text"  name = "section<%= i %>" value= <%= courses[i].section %>  /> </td>
                    <td> <input type = "text"  name = "days<%= i %>" value=  <%= courses[i].days %>  /> </td>
                    <td><input type = "text" name = "startTime<%= i %>" value= <%= courses[i].startTime %> /> </td>
                    <td> <input type = "text" name = "endTime<%= i %>" value= <%= courses[i].endTime %> /> </td>

                </tr>
                <% } %>

                <input type = "hidden" name = "length" value = "<%= courses.length %>" />

                </tbody>
            </table>
            <button class = "btn-block btn-success btn-lg" type = 'submit'> Next </button>

        </form>

    </div>
</div>

</body>
</html>
